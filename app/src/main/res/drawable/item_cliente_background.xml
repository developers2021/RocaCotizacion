<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light gray color for pressed state -->
            <stroke android:width="1dp" android:color="@color/cardview_dark_background"/> <!-- Border color -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White color for normal state -->
            <stroke android:width="1dp" android:color="@color/cardview_dark_background"/> <!-- Border color -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
